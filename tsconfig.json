{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/ts/*"]
        },
        "types": ["vite/client", "alpinejs"],
        "declaration": true,
        "declarationDir": "dist/types",
        "outDir": "dist"
    },
    "include": [
        "resources/ts/**/*.ts",
        "resources/ts/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
} 